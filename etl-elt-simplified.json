{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
    },
    "prefix": {
      "type": "string",
      "defaultValue": "dataarch2"
    },
    "sqlAdminLogin": {
      "type": "string",
      "defaultValue": "sqladminuser"
    },
    "sqlAdminPassword": {
      "type": "secureString"
    }
  },
  "variables": {
    "storageAccountName": "[toLower(concat(parameters('prefix'), 'lake', uniqueString(resourceGroup().id)))]",
    "adfName": "[concat(parameters('prefix'), '-adf')]",
    "logicAppName": "[concat(parameters('prefix'), '-logicapp')]",
    "databricksName": "[concat(parameters('prefix'), '-dbx')]",
    "adxClusterName": "[concat(parameters('prefix'), '-adx')]",
    "synapseWorkspaceName": "[concat(parameters('prefix'), '-synapse')]",
    "sqlServerName": "[toLower(concat(parameters('prefix'), 'sqlsrv', uniqueString(resourceGroup().id)))]",
    "sqlDbName": "[concat(parameters('prefix'), '-sqldb')]",
    "keyVaultName": "[concat(parameters('prefix'), '-kv')]"
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2022-09-01",
      "name": "[variables('storageAccountName')]",
      "location": "[parameters('location')]",
      "sku": { "name": "Standard_RAGRS" },
      "kind": "StorageV2",
      "properties": { "isHnsEnabled": true }
    },

    {
      "type": "Microsoft.DataFactory/factories",
      "apiVersion": "2018-06-01",
      "name": "[variables('adfName')]",
      "location": "[parameters('location')]",
      "properties": {}
    },

    {
      "type": "Microsoft.Logic/workflows",
      "apiVersion": "2019-05-01",
      "name": "[variables('logicAppName')]",
      "location": "[parameters('location')]",
      "properties": {
        "definition": {},
        "parameters": {}
      }
    },

    {
      "type": "Microsoft.Databricks/workspaces",
      "apiVersion": "2023-02-01",
      "name": "[variables('databricksName')]",
      "location": "[parameters('location')]",
      "sku": { "name": "premium" },
      "properties": {
        "managedResourceGroupId": "[concat('/subscriptions/', subscription().subscriptionId, '/resourceGroups/', concat('dbx-mrg-', uniqueString(resourceGroup().id)))]"
      }
    },

    {
      "type": "Microsoft.Kusto/clusters",
      "apiVersion": "2022-12-29",
      "name": "[variables('adxClusterName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "Standard_D13_v2",
        "tier": "Standard",
        "capacity": 2
      },
      "properties": { "enableStreamingIngest": true }
    },

    {
      "type": "Microsoft.Synapse/workspaces",
      "apiVersion": "2021-06-01",
      "name": "[variables('synapseWorkspaceName')]",
      "location": "[parameters('location')]",
      "properties": {
        "defaultDataLakeStorage": {
          "accountUrl": "[concat('https://', variables('storageAccountName'), '.dfs.core.windows.net')]",
          "filesystem": "synapse"
        },
        "managedResourceGroupName": "[concat('synapse-mrg-', uniqueString(resourceGroup().id))]",
        "sqlAdministratorLogin": "[parameters('sqlAdminLogin')]",
        "sqlAdministratorLoginPassword": "[parameters('sqlAdminPassword')]"
      }
    },

    {
      "type": "Microsoft.Sql/servers",
      "apiVersion": "2022-05-01-preview",
      "name": "[variables('sqlServerName')]",
      "location": "[parameters('location')]",
      "properties": {
        "administratorLogin": "[parameters('sqlAdminLogin')]",
        "administratorLoginPassword": "[parameters('sqlAdminPassword')]"
      }
    },
    {
      "type": "Microsoft.Sql/servers/databases",
      "apiVersion": "2022-05-01-preview",
      "name": "[concat(variables('sqlServerName'), '/', variables('sqlDbName'))]",
      "location": "[parameters('location')]",
      "sku": { "name": "S0", "tier": "Standard" },
      "properties": {}
    },

    {
      "type": "Microsoft.KeyVault/vaults",
      "apiVersion": "2022-07-01",
      "name": "[variables('keyVaultName')]",
      "location": "[parameters('location')]",
      "properties": {
        "tenantId": "[subscription().tenantId]",
        "sku": { "family": "A", "name": "standard" },
        "accessPolicies": []
      }
    }
  ],
  "outputs": {
    "storageAccount": { "type": "string", "value": "[variables('storageAccountName')]" },
    "dataFactory": { "type": "string", "value": "[variables('adfName')]" },
    "logicApp": { "type": "string", "value": "[variables('logicAppName')]" },
    "databricks": { "type": "string", "value": "[variables('databricksName')]" },
    "dataExplorer": { "type": "string", "value": "[variables('adxClusterName')]" },
    "synapse": { "type": "string", "value": "[variables('synapseWorkspaceName')]" },
    "sqlServer": { "type": "string", "value": "[variables('sqlServerName')]" },
    "sqlDb": { "type": "string", "value": "[variables('sqlDbName')]" },
    "keyVault": { "type": "string", "value": "[variables('keyVaultName')]" }
  }
}
